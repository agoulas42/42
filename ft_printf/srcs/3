#include "../includes/ft_printf.h"

static int	ft_hand_p(char **num, t_conv *p, va_list *ap)
{
	uintmax_t	value;
	char		*low;
	char		*tmp;
	int			d;

	low = NULL;
	tmp = NULL;
	value = (uintmax_t)va_arg(*ap, uintmax_t);
	*num = ft_itoa_base_uox(value, 16);
	d = (value == 0 && p->precs == 0) ? 2 : (ft_strlen(*num) + 2);
	low = *num;
	if ((*num = (char*)malloc(sizeof(char) * d))== NULL)
	{
		free(low);
		return (0);
	}
	ft_strcat(*num,"0x");
	if (!(value == 0 && p->precs == 0))
	{
		tmp = ft_strtolower(low);
		ft_strcat(*num, tmp);
		free(tmp);
	}
	free(low);
	return (1);
}

int			ft_handle_p(t_format **f, t_conv *p, va_list *ap)
{
	char		*num;
	int			d;

	num = NULL;
	if (ft_hand_p(&num, p, ap) == -1)
		return (-1);
	d = ft_strlen(num);
	if (p->width > d)
	{
		if (p->fl_minus == 0)
			ft_s_empty(f, (*f)->pos_b, (p->width - d), ' ');
		ft_strcat((*f)->buffer, num);
		(*f)->pos_b = (*f)->pos_b + d;
		if (p->fl_minus == 1)
			ft_s_empty(f, (*f)->pos_b, (p->width - d), ' ');
	}
	else
	{
		ft_strcat((*f)->buffer, num);
		(*f)->pos_b = (*f)->pos_b + d;
	}
	(*f)->lst_pourc = (*f)->pos_b;
	return (1);
}
